                      </form>
                    </div>
                  </div>
                </dialog>

            </div>
        </form>
    </div>
    <script>
      function closeModal() {
           document.getElementById('my_modal_1').classList.add('hidden');
          document.getElementById('my_modal_2').classList.add('hidden');
          document.getElementById('my_modal_3').classList.add('hidden');
