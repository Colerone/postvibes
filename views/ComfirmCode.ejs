                <!-- Open the modal using ID.showModal() method -->
                
                <a class="inline-block align-baseline font-bold text-base text-teal-500 hover:text-teal-800 ml-4"  onclick="my_modal_2.showModal()" href="#">
                    Resend OTP <samll>(0:36)</samll>
                </a>
                <dialog id="my_modal_2" class="modal">
                  <div class= "modal-box ">
                    <div class="space-y-2 p-2">
                    <div class=" justify-center text-center dark:text-white">
                      <div class=" flex items-center justify-center">
                        <img class="mx-auto h-12 w-auto" src="https://www.svgrepo.com/show/499664/user-happy.svg" alt="" />
                    </div>
                  
                    <p class="py-4 text-green font-mono text-2xl font-bold">"We will resend the OTP to you" </p>
                  </div>
                </div>
