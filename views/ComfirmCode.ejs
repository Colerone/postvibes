                      <form method="dialog">
                        <!-- if there is a button in form, it will close the modal -->
                        <a href="#"><button type="button"  onclick="closeModal()"class="text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2 dark:bg-blue-600 dark:hover:bg-blue-700 focus:outline-none dark:focus:ring-blue-800">OK</button>
